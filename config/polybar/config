[colors]

    background          = ${xrdb:color8:#9c918a}
    foreground          = ${xrdb:color15:#dfd0c6}
    active              = #634F62
    inactive            = #634F62
    highlight           = ${xrdb:color2:#AB5947}
    error               = ${xrdb:color9:#634F62}


[bar/base]

    monitor             = ${env:MONITOR:VGA1}

    bottom              = false

    width               = 100%
    height              = 24

    offset-y            = 0%
    radius              = 0.0

    fixed-center        = true

    background          = ${colors.background}
    foreground          = ${colors.foreground}

    line-size           = 0
    label-line-color    = #f00

    border-size         = 0
    border-color        = #00000000

    padding-left        = 0
    padding-right       = 0

    module-margin-left  = 0
    module-margin-right = 0

    font-0              = "Fantasque Sans Mono:pixelsize=12;2"
    font-1              = "Material Icons:size=13;4"
    font-2              = "FontAwesome:style=Regular:size=10;2"

    tray-position       = none
    tray-padding        = 10
    tray-background     = ${colors.inactive}


[bar/top]

    inherit             = bar/base

    modules-left        = i3
    modules-center      = xwindow
    modules-right       = volume wlan date


[bar/bottom]

    inherit             = bar/base

    bottom              = true

    modules-left        = i3


[module/i3]

    type                       = internal/i3

    pin-workspaces             = true

    index-sort                 = true

    format-padding             = 0

    content-foreground         = ${colors.background}

    content-padding            = 2

    ws-icon-0                  = 1;
    ws-icon-1                  = 2;
    ws-icon-2                  = 3;
    ws-icon-3                  = 4;
    ws-icon-4                  = 5;
    ws-icon-5                  = 6;
    ws-icon-6                  = 7;
    ws-icon-7                  = 8;
    ws-icon-8                  = 9;
    ws-icon-9                  = 10;

    format                     = <label-state> <label-mode>

    label-mode-padding         = 1
    label-mode-foreground      = ${colors.foreground}
    label-mode-background      = ${colors.highlight}

    label-focused-background   = ${colors.active}
    label-focused-padding      = 1

    label-unfocused-padding    = 1
    label-unfocused-background = ${colors.inactive}

    label-visible-background   = ${colors.highlight}
    label-visible-padding      = 1

    label-urgent-background    = ${colors.highlight}
    label-urgent-padding       = 1


[module/xwindow]

    type                       = internal/xwindow

    format-background          = ${colors.active}
    format-padding             = 1
    label                      = %title:0:25: ...%


[module/mpd]

    type                       = internal/mpd

    format-online              = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

    icon-play                  = ⏵
    icon-pause                 = ⏸
    icon-stop                  = ⏹
    icon-prev                  = ⏮
    icon-next                  = ⏭

    label-song-maxlen          = 25
    label-song-ellipsis        = true

    format-playing-padding     = 2
    format-playing-background  = ${colors.highlight}


[module/wlan]

    type                        = internal/network

    interface                   = wlp2s0
    interval                    = 3.0

    format-connected-padding    = 1
    format-connected            = <ramp-signal> <label-connected>
    label-connected             = %essid%
    format-connected-background = ${colors.active}

    format-disconnected         =

    ramp-signal-0               = 
    ramp-signal-foreground      = ${colors.foreground}


[module/date]

    type                        = internal/date

    interval                    = 5

    date                        = "%d %b %Y, "

    time                        = %I:%M %p

    format-padding              = 1
    format-background           = ${colors.background}

    label                       = %date%%time%


[module/volume]

    type = internal/alsa

    format-volume = <ramp-volume> <label-volume>
    format-volume-padding = 1
    format-volume-background = ${colors.active}

    ramp-volume-0 = 
    ramp-volume-1 = 
    ramp-volume-2 = 
    ramp-volume-3 = 
    ramp-volume-foreground = ${colors.foreground}

    format-muted-prefix = " "
    format-muted-foreground = ${colors.background}
    format-muted-background = ${colors.error}
    format-muted-padding = 1

    label-muted = MUTED


[module/battery]

    type = internal/battery

    battery = BAT0
